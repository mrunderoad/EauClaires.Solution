@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<div class="jumbotron">
  <h1>Stylists at Eau Claires Salon:</h1>
</div>
<hr />
<div class="row">
  <div class="card stylistIndexCard">
    @if (Model.Count == 0)
    {
      <h3>There are no Stylists at Eau Claires at the moment. Please check later. Sorry for the inconvenience!</h3>
    }  
    <ul>
      @foreach (Stylist stylist in Model)
      {
        <div class="stylist">
          <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
        </div>
      }
    </ul>
  </div>
  <div class="card addStylistInfo">
    <h3>~How to add a Stylist~</h3>
    <p>Click the "Add new Stylist" button below, this will take you to a new Stylist page. Enter the Stylist name and click "Add new Stylist". This will redirect you back to this page for you to click on a Stylist. You will then be able to edit, delete the Stylist and add Clients!</p>
  </div>
</div>
<hr />
<button class="btn-warning newStylist">@Html.ActionLink("Add new Stylist", "Create")</button>