@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<div class="jumbotron">
  <h1>Edit Stylist: <strong>@Html.DisplayFor(model => model.StylistName)</strong></h1>
</div>

@using (Html.BeginForm())
{
  <div class="row">
    <div class="card updateStylist">
      @Html.HiddenFor(model => model.StylistId)
      <h3>Update Stylist Name:</h3>
      @Html.EditorFor(model => model.StylistName)
    </div>
  </div>
  <br>
  <input class="updateStylistBtn" type="submit" value="Update Stylist" />
}