@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model HairSalon.Models.Stylist;

<div class="jumbotron">
  <h1>Stylist Details</h1>
</div>
<hr />
<div class="row">
  <div class="card stylistClients">
    <h4>@Html.DisplayFor(model => model.StylistName)'s Clients</h4>
    @foreach(Client client in Model.Clients)
    {
      <div class="stylist">
        <li>@Html.ActionLink($"{client.ClientName}", "Details", "Clients", new { id = client.ClientId })</li>
      </div>
    }
  </div>
  <div class="card stylistOptions">
    <button class="btn-warning btn3">@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</button>
    <button class="btn-warning btn4">@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</button>
    <button class="btn-warning btn5">@Html.ActionLink("Add a new Client", "Create", "Clients")</button>
  </div>
</div>  