@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Edit Stylist: @Html.DisplayFor(model => model.StylistName)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId)

  <h3>Update Stylist Name:</h3>
  @Html.EditorFor(model => model.StylistName)

  <input type="submit" value="Save" />
}